{
    "name": "iadambrown/flash",
    "homepage": "https://github.com/iadambrown/laravel-helpers",
    "description": "Simple flash messaging component, modelled after laracasts/flash.",
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Brown",
            "email": "iadambrown@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/support": "6.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "fzaninotto/faker": "^1.8",
        "illuminate/support": "5.7.*|5.8.*",
        "mockery/mockery": "dev-master",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "iAdamBrown\\Flash\\": "src/iAdamBrown/Flash"
        },
        "files": [
            "src/iAdamBrown/Flash/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "iAdamBrown\\Flash\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "iAdamBrown\\Flash\\FlashServiceProvider"
            ],
            "aliases": {
                "Flash": "iAdamBrown\\Flash\\Flash"
            }
        }
    }
}
